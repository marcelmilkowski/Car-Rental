<Window x:Class="Wypoyczalnia2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wypoyczalnia2"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="750">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
       

        <Border Background="#16161a" Grid.Column="1"/>
      

        <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\nowe.png" Margin="130,85,296,85" Grid.ColumnSpan="2" />
        <Label Grid.Column="1" Content="Wypozyczalnia&#xD;&#xA;  Szymkmil" HorizontalAlignment="Left" Width="452" Foreground="#FFFFF0F0" FontFamily="Magneto" FontSize="30" FontWeight="Bold" Margin="242,168,0,82"/>


        <Border Background="#242629" Grid.Column="0" />

        


        <StackPanel Height="270" Width="150">


            <Button Click="MainMenu_Clicked" Height="45" Background="#FF16161A" BorderBrush="{x:Null}" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0">
                    <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\house-chimney.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Strona główna" Foreground="#FFFFF0F0" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <Button Click="CarsViewButton_Clicked" Height="45" Background="#242629" BorderBrush="{x:Null}" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\car-side.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Samochody" Foreground="#FFFFF0F0" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            <Button Click="ReservationButton_Clicked" Height="45" Background="#242629" BorderBrush="{x:Null}" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\reservation-table (1).png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Rezerwacje" Foreground="#FFFFF0F0" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <Button Height="45" Background="#242629" BorderBrush="{x:Null}"  HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\customization-cogwheel.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Ustawienia" Foreground="#FFFFF0F0" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            <Button Click="QuitButton_Clicked" Height="45" Background="#242629" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" >
                    <Image Source="C:\Users\marce\OneDrive\Dokumenty\Projects\c#\Wypoyczalnia2\Wypoyczalnia2\Images\user-logout.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Wyjdż" Foreground="#FFFFF0F0" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
        
        <ContentControl x:Name="MainContent" Grid.Column="1"/>


    </Grid>

</Window>
